{
  "manifest_version": 3,
  "name": "Gecko Store Tools",
  "version": "1.0",
  "description": "Gecko Store extension with glassmorphism UI",
  "homepage_url": "http://localhost:3000",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "cookies",
    "contextMenus",
    "declarativeContent",
    "management",
    "proxy",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "incognito": "split",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["http://localhost:3000/*"],
    "js": ["content-script.js"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}